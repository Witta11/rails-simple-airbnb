<div class="container mt-5">
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %> <br>
  <%= f.input :address%><br>
  <%= f.input :description %><br>
  <%= f.input :price_per_night %><br>
  <%= f.input :number_of_guests %><br>
  <%= f.button :submit, "Add Flat", class:"btn btn-primary"%>
<% end %>
</div>
